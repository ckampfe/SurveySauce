<div class="container">
  <div class="survey_space">
    <form action='/surveys/new' name='new_survey' id='new_survey' method='POST'>
      <input type="text" name="title" placeholder='Survey Name'><br><br>
      <input type="submit" value="Create Survey">
    </form>
  </div>

  <div class="question_space" style="display:none">
    <form action='/questions/new' name='new_question' id='new_question' method='POST'>
      Quesiton: <input type="text" name="body"><br><br>
      Answer 1: <input type="text" name="option1"><br><br>
      Answer 2: <input type="text" name="option2"><br><br>
      Answer 3: <input type="text" name="option3"><br><br>
      Answer 4: <input type="text" name="option4"><br><br>
      <input type="hidden" name="survey_id" id="hidden_survey_id" data-survey-id="0">
      <input type="submit" value="Create Question"><br><br>
    </form>
    <a href="/users/<%=session[:user_id]%>/surveys" id="done_button" data-survey-id="0" >Done</a>
    </div>
</div>
