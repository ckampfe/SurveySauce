<div class='container'>
  <h1><%=@questions.first.body%></h1>

  <form action="/survey/survey_id" id='question_form' method="POST" data-survey_id='<%=@survey.id%>'
    <% @choices.each do |choice| %>
      <input type="radio" name="answer" value="<%=choice.id%>"><%=choice.option%>
      <br>
    <% end %>
    <input type="submit">
  </form>
</div>